# Dockerfile para desarrollo con hot-reload
FROM node:20-alpine

WORKDIR /app

# Copiar archivos de dependencias
COPY package*.json ./

# Instalar dependencias
RUN npm install

# Copiar archivos de configuración
COPY angular.json tsconfig*.json tailwind.config.js ./

# Copiar código fuente
COPY src ./src
COPY public ./public

# Exponer puerto
EXPOSE 4200

# Comando con polling para detectar cambios en Windows
CMD ["npm", "start", "--", "--host", "0.0.0.0", "--poll", "50"]
